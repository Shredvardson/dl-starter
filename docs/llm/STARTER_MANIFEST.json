{
  "$schema": "https://example.com/starter-manifest.schema.json",
  "version": 1,
  "template": true,
  "defaults": {
    "app_name": "Your App",
    "app_slug": "your-app",
    "primary_domain": "localhost:3000",
    "company_name": "Your Company",
    "default_locale": "en-US",
    "homepage_route": "/",
    "signed_in_route": "/dashboard",
    "brand": { "hue": 222 },
    "features": { "billing": false, "orgs": false, "ai": false }
  },
  "customize_these_files": [
    { "path": "src/app/layout.tsx", "reason": "Title/metadata + theme import" },
    { "path": "src/styles/tokens.css", "reason": "Brand & semantic tokens" },
    { "path": "src/app/(marketing)/page.tsx", "reason": "Landing copy" },
    { "path": "src/app/(app)/dashboard/page.tsx", "reason": "Default signed-in area" },
    { "path": "app.config.ts", "reason": "Per-app toggles (billing/orgs/ai)" },
    { "path": "README.md", "reason": "Project name & quickstart" }
  ],
  "recipes": {
    "auth": "docs/recipes/auth.md",
    "db": "docs/recipes/db.md",
    "payments": "docs/recipes/stripe.md",
    "ui_pack": "docs/recipes/shadcn.md"
  },
  "env_placeholders": [
    "NEXT_PUBLIC_FLAG_BETA_FEATURE=false",
    "AUTH_ENABLED=0",
    "STRIPE_PUBLIC_KEY=",
    "STRIPE_SECRET_KEY=",
    "SENTRY_DSN=",
    "NEXT_PUBLIC_SENTRY_DSN=",
    "SENTRY_ORG=",
    "SENTRY_PROJECT="
  ]
}
