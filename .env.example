# =============================================================================
# ENVIRONMENT VARIABLES CONFIGURATION
# =============================================================================
# Copy this file to .env.local and set actual values
# See docs/recipes/env-setup.md for detailed setup instructions

# =============================================================================
# REQUIRED - Development will not work without these
# =============================================================================

# App Configuration (required for basic functionality)
NEXT_PUBLIC_APP_NAME=DL Starter

# =============================================================================
# OPTIONAL - Features work without these, tests may be skipped
# =============================================================================

# Feature Flags
NEXT_PUBLIC_FLAG_BETA_FEATURE=false
NEXT_PUBLIC_ENABLE_ANALYTICS=false
AUTH_ENABLED=0

# Analytics & Monitoring (optional - affects telemetry only)
NEXT_PUBLIC_POSTHOG_KEY=
NEXT_PUBLIC_SENTRY_DSN=
SENTRY_DSN=
SENTRY_ORG=
SENTRY_PROJECT=

# Database (optional - in-memory fallback available)
DATABASE_URL=

# Authentication Provider (optional - auth flows skip if not set)
NEXT_PUBLIC_SUPABASE_URL=
NEXT_PUBLIC_SUPABASE_ANON_KEY=

# Payment Processing (optional - payment tests skip if not set)
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=